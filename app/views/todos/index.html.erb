<ul class="nav nav-tabs" role="tablist">
  <li class="active"><%= link_to 'View list', todos_path %></li>
  <li><%= link_to 'New todo', new_todo_path %></li>
</ul>

<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id= "todos-table">
    <%=render @todos %>
  </tbody>
</table>

<br>
<div class = "todo-form">
  <%= link_to new_todo_path, remote: true, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Todo
  <% end %>
</div>
